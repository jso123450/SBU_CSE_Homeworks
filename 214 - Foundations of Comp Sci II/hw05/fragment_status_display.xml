<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_status_display"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context="com.example.tictactoeai.fragments.StatusDisplayFragment">

    <TextView
        android:id="@+id/error_display"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.tictactoeai.custom.ExpandableTextView
        android:id="@+id/current_node_probs"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="Arial"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <com.example.tictactoeai.custom.ExpandableTextView
        android:id="@+id/hover_over_probs"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="Arial"
        android:maxLines="3"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="gone"/>


</LinearLayout>